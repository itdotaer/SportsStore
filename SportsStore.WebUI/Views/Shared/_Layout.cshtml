<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div id="header">
        @{Html.RenderAction("Summary", "Cart");}
        <div class="title">SPORTS STORE</div>     
    </div>     
    <div id="categories">
        @{ Html.RenderAction("Menu", "Nav"); }
    </div>
    <div id="content">
        @RenderBody()     
    </div>
    <div id="footer">
        <div class="copyRightInfo">Powered by Harry@Wicresoft</div>
        <div class="copyRightInfo">All Rights Reserved.</div>
        <div class="copyRightInfo">2012-@DateTime.Now.Year</div>
    </div>
</body>
</html>